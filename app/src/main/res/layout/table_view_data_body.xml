<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/customized_table_body_layout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/customized_table_body_left_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_content_text_bg"
            >
        </android.support.v7.widget.RecyclerView>
        <com.liu.customized.table.HScrollView
            android:id="@+id/customized_table_body_right_h_scroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:scrollbars="none"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/customized_table_body_right_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_content_text_bg"
                >
            </android.support.v7.widget.RecyclerView>
        </com.liu.customized.table.HScrollView>

    </LinearLayout>